extends layout

block content
  - var divClass = null;
  - var count = 0;
  h1= title
  - each items in pelis
    div.box.box-default.color-palette-box
     div.box-header.with-border
      h3.box-title #{items[0].type}
     div.box-body
      div.row
       - each item in items
          div.col-md-2
           div.box.box-info
            div.box-body.box-profile
              img.img-responsive.center-block(data-toggle="tooltip", data-placement="bottom", style="height:222px; width:150px;" src= "#{item.img}")
              br
              h6.text-center #{item.title}
              button(type="button",id="show_info",value="#{item.url}").btn.btn-primary.center-block
                i.fa.fa-download
                 |   Descargar
              a(id="url",value="#{url}")








