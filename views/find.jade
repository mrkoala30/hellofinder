extends layout

block content
  - var divClass = null;
  - var count = 0;
  h1= title
  - each pelicula in pelis
   - if(pelicula.calidad.search("HD")!=-1 || pelicula.calidad.search("BluRay")!=-1)
    - divClass = "box box-success";
   - else if(pelicula.calidad.search("DVD")!=-1)
    - divClass = "box box-info";
   - else
    - divClass = "box box-danger";
   - if(count==6)
    - count = 0
     div.row
   div.col-md-2
    div(class="#{divClass}")
     div.box-body.box-profile
        img.img-responsive(style="height:222px; width:150px;" src= "#{pelicula.img}")
        br
        h6.text-center #{pelicula.titulo}
        h6.text-muted.text-center
            | #{pelicula.calidad}
            | ||
            | #{pelicula.tamano}
        form(name="add-estimation", method="post", action="#{url}/torrent/findtorrent")
             input(type="hidden", name="link" value="#{pelicula.enlace}")
             div.action
                 button(type="submit", value="Descargar").btn.btn-primary.center-block
                     i.fa.fa-download
                     |   Descargar
        - count++
 
    
  